<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 0 %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%#= form.text_field :size %>
    <% sizes = ["S","M","L","XL","XXL","Free"]%>
    <% sizes.each do |size| %>
      <%= form.check_box :size, {multiple: true,}, size, false  %>
      <%= form.label :size, "#{size}" %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select(:category, {"Male"=>"Male", "Female"=>"Female", "Unisex"=>"Unisex", "Kids"=>"Kids"},{:prompt => "Select.."},{ :class => '', :include_blank => 'none'  }) %>
  </div>

  <div class="field">
    <%= form.label :image, "Add An Image" %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
